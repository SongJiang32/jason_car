<?xml version='1.0'?>

<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find jasonackerman_control)/config/jasonackerman_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_manager" pkg="controller_manager" type="spawner" respawn="false"
        output="screen" ns="/jasonackerman" args="flwheel_velocity_controller frwheel_velocity_controller
                                            	    rlwheel_velocity_controller rrwheel_velocity_controller
                                            	    flsteer_position_controller frsteer_position_controller
                                            	    joint_state_controller"/>


  <!--运行joint_state_publisher节点，发布机器人关节状态-->
  <node name= "robot_state_publisher" pkg= "robot_state_publisher" type= "robot_state_publisher">
      <remap from="/joint_states" to="/jasonackerman/joint_states"/>
  </node>

  <!-- servo node -->
  <node pkg="jasonackerman_control" type="servo_commands.py" name="servo_commands" output="screen"/>

  <!-- servo node -->
  <node pkg="jasonackerman_control" type="transform.py" name="transform" output="screen"/>


  <!-- Allow for Gazebo to broadcast odom -->
  <node pkg="jasonackerman_control" name="gazebo_odometry_node" type="gazebo_odometry.py"/> 

</launch>

